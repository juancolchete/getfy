{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
  ]
}
